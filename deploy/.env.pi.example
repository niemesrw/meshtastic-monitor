# Meshtastic Monitor - Raspberry Pi Configuration
# Copy this file to .env and configure for your setup

# Required: IP address of your Meshtastic device
MESHTASTIC_HOST=192.168.1.100

# Optional: Meshtastic TCP port (default: 4403)
MESHTASTIC_PORT=4403

# Optional: Unique identifier for this collector (for multi-collector sync)
MESHTASTIC_COLLECTOR_ID=pi-living-room

# Optional: Sync to central server
MESHTASTIC_SYNC_ENABLED=false
MESHTASTIC_SYNC_API_URL=
MESHTASTIC_SYNC_API_KEY=

# Watchtower: How often to check for updates (seconds, default: 300 = 5 min)
WATCHTOWER_POLL_INTERVAL=300
